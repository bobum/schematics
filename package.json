{
  "name": "authentication-module",
  "version": "1.0.0",
  "description": "Comprehensive authentication module with unit tests",
  "main": "auth.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "authentication",
    "auth",
    "login",
    "token",
    "jwt"
  ],
  "author": "Software Developer Agent",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "auth.js"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/*.test.complete.js"
    ]
  }
}
