{
  "name": "user-preferences-api",
  "version": "1.0.0",
  "description": "REST API for managing user preferences",
  "main": "api/app.js",
  "scripts": {
    "start": "node api/app.js",
    "dev": "nodemon api/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint api/**/*.js",
    "db:setup": "mysql -u root -p < api/database/schema.sql"
  },
  "keywords": [
    "api",
    "rest",
    "preferences",
    "user-settings"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.6.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.47.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
